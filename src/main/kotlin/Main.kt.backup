fun performExitCleanup() {
    Logger.log("ğŸ“¤ å¼€å§‹æ‰§è¡Œé€€å‡ºæ¸…ç†...")

    // åŒæ­¥Gitæ•°æ®
    runBlocking {
        try {
            val syncResult = AppInitializer.syncData()
            if (syncResult.isSuccess) {
                Logger.log("âœ“ æ•°æ®åŒæ­¥å®Œæˆ")
            } else {
                Logger.log("âš ï¸ æ•°æ®åŒæ­¥å¤±è´¥: ${syncResult.exceptionOrNull()?.message}")
            }
        } catch (e: Exception) {
            Logger.error("æ•°æ®åŒæ­¥å¼‚å¸¸", e)
